<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="15"
    >

    <TableRow
        android:layout_weight="1"
        android:weightSum="6"
        >
        <Button
            android:id="@+id/buttonBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Back"
            android:textSize="16sp"
            android:layout_margin="3sp"
            />
        <TextView
            android:id="@+id/tvExercise"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Delete"
            android:textSize="16sp"
            android:layout_margin="3sp"
            />
    </TableRow>

    <TableRow
        android:layout_weight="1"
        android:background="@color/Silver">
        >
        <TextView
            android:id="@+id/setTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="left"
            />
    </TableRow>

    <TableRow
        android:layout_weight="1"
        android:background="@color/Silver"
        >

        <TextView
            android:id="@+id/waSet1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/waSet2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:textSize="20sp"
            />
    </TableRow>

    <TableRow
        android:layout_weight="1"
        android:background="@color/Silver"
        >
        <TextView
            android:id="@+id/waSet3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/waSet4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:textSize="20sp"
            />
    </TableRow>


    <TableRow
        android:layout_weight="1"
        android:background="@color/Silver"
        >
        <TextView
            android:id="@+id/workSet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center"
            />

    </TableRow>

    <TableRow
        android:layout_weight="1"
        android:weightSum="1"
        android:background="@color/WhiteSmoke"
        >

        <TextView
            android:id="@+id/stateTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="left"
            android:text="State"
            android:textStyle="bold"
            />
    </TableRow>

    <TableRow
        android:layout_weight="1"
        android:weightSum="6"
        android:background="@color/WhiteSmoke"
        >
        <TextView
            android:id="@+id/failedTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="20sp"
            android:gravity="right"
            />
        <TextView
            android:id="@+id/failedCnt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="left"
            />
        <TextView
            android:id="@+id/deloadedTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="20sp"
            android:gravity="right"
            />
        <TextView
            android:id="@+id/deloadedCnt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="left"
            />

    </TableRow>


    <TableRow
        android:layout_weight="1"
        android:background="@color/WhiteSmoke">
        >
        <Button
            android:id="@+id/buttonDone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Done"
            android:textSize="20sp"
            android:layout_margin="3sp"
            />
        <Button
            android:id="@+id/buttonFailed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Failed"
            android:textSize="20sp"
            android:layout_margin="3sp"
            />
    </TableRow>


    <TableRow
        android:layout_weight="1"
        android:background="@color/Silver"
        >
        <TextView
            android:id="@+id/modeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:ems="10"
            android:layout_weight="1"
            android:textSize="20sp"
            />
    </TableRow>

    <TableRow
        android:layout_weight="1"
        android:background="@color/Silver"
        >

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/modeLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:gravity="left"
            >
            <RadioButton android:id="@+id/mode5x5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5x5"
                android:layout_weight="1"
                />
            <RadioButton android:id="@+id/mode3x5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3x5"
                />
            <RadioButton android:id="@+id/mode3x3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3x3"
                />
            <RadioButton android:id="@+id/mode1x3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1x3"
                />
            <RadioButton android:id="@+id/mode5x3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5x3"
                />
            <RadioButton android:id="@+id/mode1x5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1x5"
                />
        </RadioGroup>
    </TableRow>

    <TableRow
        android:layout_weight="1"
        android:weightSum="2"
        android:background="@color/WhiteSmoke"
        >
        <TextView
            android:id="@+id/sizeWeightIncr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:ems="10"
            android:layout_weight="1"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/modeOptionTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_weight="1"
            android:textSize="20sp"
            />
    </TableRow>

    <TableRow
        android:layout_weight="1"
        android:background="@color/WhiteSmoke"
        >

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/weightIncrSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:scaleX="1.0"
            android:scaleY="1.0"
            >

            <RadioButton android:id="@+id/weightIncrSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1.25kg"
                android:layout_weight="1"
                />
            <RadioButton android:id="@+id/weightIncrBig"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2.50kg"
                />
        </RadioGroup>

        <RadioGroup
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/modeOption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:scaleX="1.0"
            android:scaleY="1.0"
            >

            <RadioButton android:id="@+id/modeFix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fix"
                />
            <RadioButton android:id="@+id/modeVar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Var"
                android:layout_weight="1"
                />

        </RadioGroup>
    </TableRow>

    <TableRow
        android:layout_weight="1"
        android:background="@color/Silver"
        >
        <TextView
            android:id="@+id/editWeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_weight="1"
            android:text="Edit Weight"
            android:gravity="left"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </TableRow>

    <TableRow
        android:layout_weight="1"
        android:background="@color/Silver"
        >
        <Button
            android:id="@+id/buttonWeightIncrBig"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+5.00kg"
            android:textSize="16sp"
            android:layout_margin="3sp"
            />
        <Button
            android:id="@+id/buttonWeightIncrSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+1.25kg"
            android:textSize="16sp"
            android:layout_margin="3sp"
            />
        <Button
            android:id="@+id/buttonWeightDecrSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-1.25kg"
            android:textSize="16sp"
            android:layout_margin="3sp"
            />
        <Button
            android:id="@+id/buttonWeightDecrBig"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-5.00kg"
            android:textSize="16sp"
            android:layout_margin="3sp"
            />

    </TableRow>

    <TableRow
        android:layout_weight="1"
        android:background="@color/WhiteSmoke"
        >
        <TextView
            android:id="@+id/output"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:ems="10"
            android:layout_weight="6"
            android:textSize="16sp"
            />
    </TableRow>

</TableLayout>